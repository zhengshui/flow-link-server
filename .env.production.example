# ============================================
# 生产环境配置示例
# 复制此文件为 .env.production 并填入实际值
# ============================================

# 应用环境
APP_ENV=production

# 服务器配置
SERVER_ADDRESS=0.0.0.0:8080
PORT=8080
CONTEXT_TIMEOUT=30

# 数据库配置（使用 Docker 内部网络）
DB_HOST=mongodb
DB_PORT=27017
DB_USER=admin
DB_PASS=CHANGE_TO_STRONG_PASSWORD
DB_NAME=flow_link

# JWT 配置 - 必须使用强随机密钥！
# 生成命令: openssl rand -hex 32
ACCESS_TOKEN_EXPIRY_HOUR=24
REFRESH_TOKEN_EXPIRY_HOUR=168
ACCESS_TOKEN_SECRET=GENERATE_WITH_openssl_rand_hex_32
REFRESH_TOKEN_SECRET=GENERATE_WITH_openssl_rand_hex_32

# Docker 配置
DOCKER_REGISTRY=
VERSION=latest
